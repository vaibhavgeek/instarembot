<% if message.from_id == "bot" %> 
	<li class="message left appeared">
	  	<div class="avatar"> <%= image_tag "tackie-big.png" %>
	  	</div>	
		<div class="text_wrapper">
	    	<div class="text-header">
				<%= message.message %>
			</div>
		</div>
	</li>
<% else %>
	<li class="message right appeared">
		<% if @user_icon == nil %>
			<div class="avatar"> <%= image_tag "user_reply.png" %> </div>
		<% else %>
			<div class="avatar"> <%= image_tag @user_icon %> </div>
		<% end %>
	
		<div class="text_wrapper">
			<div class="text">
				<%= message.message %>
			</div>
		</div>
	</li>
<% end %>